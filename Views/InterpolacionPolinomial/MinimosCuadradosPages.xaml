<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CodexGigas.ViewModels.InterpolacionPolinomial"
             x:Class="CodexGigas.Views.MinimosCuadradosPages"
             x:DataType="vm:MinimosCuadradosViewModel"
             Title="MinimosCuadradosPages">
    
    <VerticalStackLayout>
        <Button Text="Calcular" Command="{Binding SetValoresCommand}"/>
        <Label Text="Datos de entrada"/>
        <Label Text="{Binding Funcion}"/>
        <Label Text="Valores de X"/>
        <Label Text="{Binding X}"/>
        <Label Text="Valores de Y"/>
        <Label Text="{Binding Y}"/>
        <Button Text="Enviar datos" Command="{Binding CalcularCommand}"/>
        <Label Text="Resultado"/>
        <Label Text="Funcion"/>
        <Label Text="{Binding Fx}"/>
        <Label Text="Respuesta A"/>
        <Label Text="{Binding Ansa}"/>
        <Label Text="Respuesta B"/>
        <Label Text="{Binding Ansb}"/>
    </VerticalStackLayout>
</ContentPage>